<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="guestbook">
	<select id= "getList" resultType="guestbookvo">
		<![CDATA[
		select	no, 
				name, 
				contents, 
				date_format(reg_date, '%Y-%M-%d %h:%i:%s') as reg_date
		  from	guestbook 
      order by 	no desc
		]]>
	</select>
	
	<select id= "getList2" parameterType="long" resultType="guestbookvo">
		<![CDATA[
		select	no, 
				name,      
				contents, 
				date_format(reg_date, '%Y-%M-%d %h:%i:%s') 
		  from	guestbook        
		]]>
		  <if test= '_parameter >0'>			<!-- if 안에서 사용할 경우에는 _parameter  -->
		 <![CDATA[   
		 where  no > #{parameter }
		 ]]>
		  </if>
		 <![CDATA[ 
      order by 	no desc
      	 limit  0, 5
		]]>
	</select>									
<!-- 	result맵을 쓰는 것보다는 아리아스를 써줘서 사용하는게 좋다 --> 

	
	<insert id="insert" parameterType="guestbookvo">
		<![CDATA[
		insert 
		  into guestbook 
		values(null, #{name }, #{password }, #{contents }, now())
		]]>
	</insert>
	
	<delete id="delete" parameterType="guestbookvo">
		<![CDATA[
		 delete
		   from guestbook
		  where no = #{no }
		    and password= #{password }
		]]>
	</delete>
	
</mapper>

